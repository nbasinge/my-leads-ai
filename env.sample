# Nescka Lead Tracker - Environment Variables Sample
# Copy this file to .env and fill in your actual values

# ==========================================
# Frontend Configuration
# ==========================================

# API Endpoint for n8n webhooks (from API Gateway)
VITE_API_ENDPOINT=http://localhost:5678
# Or in production:
# VITE_API_ENDPOINT=https://your-api-id.execute-api.region.amazonaws.com/prod

# n8n Webhook URLs
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook
VITE_N8N_LEADS_WEBHOOK_URL=http://localhost:5678/webhook/leads

# ==========================================
# Supabase Configuration
# ==========================================

# Supabase Project URL (get from Supabase dashboard)
VITE_SUPABASE_URL=https://xxxxxxx.supabase.co

# Supabase Anonymous Key (public, safe for frontend)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Supabase Service Role Key (NEVER expose this in frontend, backend only!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Supabase Database Connection (for n8n backend)
# Get from: Supabase Dashboard → Settings → Database → Connection string
SUPABASE_DB_HOST=db.xxxxxxx.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-secure-password

# Connection Pooling (recommended for Fargate)
SUPABASE_DB_POOLER_HOST=db.xxxxxxx.supabase.co
SUPABASE_DB_POOLER_PORT=6543

# ==========================================
# n8n Configuration (for AWS Fargate)
# ==========================================

# n8n Host Configuration
N8N_HOST=your-load-balancer-dns.us-east-1.elb.amazonaws.com
N8N_PROTOCOL=http
N8N_PORT=5678

# n8n Database (Supabase)
N8N_DB_TYPE=postgresdb
N8N_DB_HOST=${SUPABASE_DB_HOST}
N8N_DB_PORT=${SUPABASE_DB_PORT}
N8N_DB_DATABASE=${SUPABASE_DB_NAME}
N8N_DB_USER=${SUPABASE_DB_USER}
N8N_DB_PASSWORD=${SUPABASE_DB_PASSWORD}
N8N_DB_SSL=true

# n8n Execution Settings
N8N_METRICS=true
N8N_EXECUTIONS_PROCESS=main
N8N_ENCRYPTION_KEY=your-32-character-encryption-key
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret

# Webhook Configuration
N8N_WEBHOOK_URL=http://your-load-balancer-dns.us-east-1.elb.amazonaws.com/webhook

# ==========================================
# AWS Configuration
# ==========================================

# AWS Region
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# AWS Credentials (or use AWS CLI/SSO)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# CDK Configuration
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# ==========================================
# Application Configuration
# ==========================================

# Application Environment
NODE_ENV=development
# NODE_ENV=production

# Application URL
APP_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug
# LOG_LEVEL=info

# ==========================================
# Optional: Third-Party Integrations
# ==========================================

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-xxxxx

# Upwork API (if integrating directly)
UPWORK_API_KEY=your-upwork-key
UPWORK_API_SECRET=your-upwork-secret

# LinkedIn API (if integrating directly)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-secret

# ==========================================
# Development/Testing
# ==========================================

# Mock Data Mode (use mock data instead of real API)
USE_MOCK_DATA=true

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_EMAIL_SUMMARY=true
FEATURE_EXPORT=true

