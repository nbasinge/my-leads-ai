# AWS CDK Infrastructure Environment Variables Sample
# Copy this file to .env and fill in your actual values

# ==========================================
# AWS Account Configuration
# ==========================================

CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# AWS Profile (if using named profiles)
# AWS_PROFILE=default

# AWS Credentials (if not using profile)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ==========================================
# Supabase Configuration
# ==========================================

# Required: Set up these SSM parameters before deploying
# Run: aws ssm put-parameter commands from SUPABASE_SETUP.md

SUPABASE_HOST=db.xxxxxxx.supabase.co
SUPABASE_PORT=5432
SUPABASE_DATABASE=postgres
SUPABASE_USER=postgres
SUPABASE_PASSWORD=your-secure-password

# ==========================================
# n8n Configuration
# ==========================================

# n8n Image Version
N8N_DOCKER_IMAGE=n8nio/n8n:latest

# n8n Resources
N8N_CPU=1024
N8N_MEMORY=2048

# n8n Security
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here
N8N_JWT_SECRET=your-jwt-secret-key-here

# ==========================================
# API Gateway Configuration
# ==========================================

# API Stage
API_STAGE_NAME=prod

# Rate Limiting
API_RATE_LIMIT=100
API_BURST_LIMIT=50
API_QUOTA_LIMIT=10000

# ==========================================
# Load Balancer Configuration
# ==========================================

# HTTPS (production only)
# LB_CERTIFICATE_ARN=arn:aws:acm:region:account:certificate/id
LB_PROTOCOL=http

# ==========================================
# VPC Configuration
# ==========================================

# Number of Availability Zones
VPC_NUM_AZS=2

# NAT Gateways
VPC_NAT_GATEWAYS=1

# ==========================================
# Auto Scaling Configuration
# ==========================================

# Auto Scaling (optional, production)
ENABLE_AUTO_SCALING=false
MIN_CAPACITY=1
MAX_CAPACITY=3
TARGET_CPU_UTILIZATION=70

# ==========================================
# Monitoring & Logging
# ==========================================

# CloudWatch Logs Retention
LOG_RETENTION_DAYS=7

# Container Insights
ENABLE_CONTAINER_INSIGHTS=true

# ==========================================
# Cost Optimization
# ==========================================

# Use Spot instances (dev/staging only)
USE_SPOT_INSTANCES=false

# ==========================================
# Deployment Tags
# ==========================================

PROJECT_NAME=NesckaLeadTracker
ENVIRONMENT=development
OWNER=your-team-name
COST_CENTER=business-dev

